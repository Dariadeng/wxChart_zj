/* 排序 */
.orderBy-img{
    width: 36rpx;
    height: 36rpx;
    margin-right: 0;
    margin-bottom: -2rpx;
    padding-right:20rpx;
}
.filter-box{
  position: absolute;
  left: 0;
  z-index: 100;
  background: #fff;
}
.order-mask{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background:rgba(30,30,30,1);
  opacity:0.5;
}
.filter-extend{
  width: 100%;
  background-color: #fff;
  border-bottom: 4rpx solid #F3F3F3;
}
.filter-img{
    width: 40rpx;
    height: 40rpx;
    margin-right: 0;
    margin-bottom: -2rpx;
    padding-right:20rpx;
}
.filter-extend .list-item{
  padding: 24rpx 48rpx;
  border-top: 1px solid rgba(243,243,243,1);
  font-size: 28rpx;
  font-family:PingFangSC-Regular;
  line-height: 40rpx;
  color:rgba(30,30,30,1);
  opacity:1;
}
.filter-extend .list-item .item{
  display: flex;
  align-items: center;
}
.filter-extend .list-item .selectName{
   color: #FD7D82;
}