/* pages/characterGroup/characterGroup.wxss */
.header{
    position: relative;
    padding: 0 24rpx;
    height: 350rpx;
    background-color: #FC7B81;
}
.content{
  position: relative;
  min-height: 800rpx;
  background: #F3F3F3;
  padding: 0 30rpx 100rpx;
}
.content-title{
    padding: 12rpx 22rpx;
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    line-height:34rpx;
    color:rgba(0,0,0,0.45);
    opacity:1;
}
.company-list{
    padding:24rpx 32rpx;
    background:rgba(255,255,255,1);
    box-shadow:0px 0px 6px rgba(156,156,156,0.1);
    opacity:1;
    border-radius:4px;
    margin-bottom: 20rpx;
    font-size: 26rpx;
    font-family:PingFangSC-Regular;
    line-height: 36rpx;
    color:rgba(30,30,30,1);
}
.company_title{
    display: -webkit-flex;
    justify-content: space-between;
    padding: 0 10rpx;
    margin-bottom: 15rpx;
    font-size:32rpx;
    font-family:PingFang SC;
    font-weight:bold;
    line-height:44rpx;
    color:rgba(30,30,30,1);
    opacity:1;
}
.company_title .grade{
    white-space: nowrap;
    font-size: 24rpx;
    font-family:PingFangSC-Regular;
    line-height: 44rpx;
    color:rgba(0,0,0,0.45);
    opacity:1;
}
.company_title .grade-num{
    font-size:32rpx;
    color:rgba(252,123,129,1);
    line-height:44rpx;
}
.images1{
    width: 24rpx;
    height: 24rpx;
    margin-right: 0;
    margin-bottom: -2rpx;
    padding: 0 20rpx;
}
.group_title{
    display: flex;
    display: -webkit-flex;
    align-items: center;
    padding: 10rpx 16rpx 20rpx;
    font-size:32rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(255,255,255,1);
    line-height:44rpx;
}
.introduce-bd{
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size:26rpx;
    line-height:36rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
}
.introduce-loading{
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(255,255,255,.2);
    width: 100%;
    height: 100%;
}
.introduce-bd .canvas-wrap{
    width: 184rpx;
    height: 184rpx;
}
.introduce-bd .name{
  width: 178rpx;
  /* text-align: center; */
  margin-left: 36rpx;
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  color:rgba(255,255,255,1);
  line-height:36rpx;
  opacity:0.85;
}
.introduce-bd .text{
  font-size:26rpx;
  font-weight:400;
  line-height:36rpx;
  color:rgba(255,255,255,1);
  font-family:PingFangSC-Regular,PingFang SC;
}
.introduce-bd .num{
  font-size:32rpx;
  font-weight:500;
  line-height:44rpx;
  font-family:PingFangSC-Medium,PingFang SC;
}
.introduce-bd .main-item{
  width: 50%;
  padding: 10rpx;
  font-family:PingFangSC-Regular;
  line-height:18px;
  color:rgba(255,255,255,1);
  opacity:0.85;
}
.main-cell{
   display: flex;
   /* align-items: center; */
}
.align_center{
   display: flex;
   align-items: center;
   width: 40%;
   z-index: 100;
}
.detail{
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  color:rgba(255,255,255,1);
  line-height:36rpx;
  opacity:0.85;
}
.detail .title-cell_in-access{
  padding-right: 50rpx;
  position: relative;
}
.title-cell_in-access::after{
  content: " ";
  display: inline-block;
  height: 16rpx;
  width: 16rpx;
  border-width: 4rpx 4rpx 0  0;
  border-color: #fff;
  border-style: solid;
  -webkit-transform: matrix(.71,.71,-.71,.71,0,0);
  transform: matrix(.71,.71,-.71,.71,0,0);
  /* position: relative; */
  top: -4rpx;
  position: absolute;
  top: 50%;
  margin-top: -10rpx;
  right: 20rpx;
}
.controller-cell{
    padding-right: 50rpx;
  position: relative;
}
.controller-cell_in::after{
  content: " ";
  display: inline-block;
  height: 16rpx;
  width: 16rpx;
  border-width: 4rpx 4rpx 0  0;
  border-color: #ccc;
  border-style: solid;
  -webkit-transform: matrix(.71,.71,-.71,.71,0,0);
  transform: matrix(.71,.71,-.71,.71,0,0);
  /* position: relative; */
  position: absolute;
  top: 50%;
  margin-top: -12rpx;
  right: 20rpx;
}
.controller-cell_shrink::after{
  border-width: 4rpx 4rpx 0  0;
}
.controller-cell_expand::after{
  border-width: 0 4rpx 4rpx 0;
}
.canvasBox {
  /* width: 235rpx; */
  height: 200rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  background-color: transparent;
} 
 
.progress_bg_wrap {
  position: absolute;
  width: 240rpx;
  height: 240rpx;
}
 
.progress_canvas_wrap {
  width: 240rpx;
  height: 240rpx;
}
.progress_bg {
  width: 100%;
  height: 100%;
}
 
