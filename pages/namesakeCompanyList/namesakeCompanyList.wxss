/* pages/namesakeList/namesakeList.wxss */
page{ 
  height:100%;
}
.namesake-page{
   width: 100%;
   height: 100%;
   background: #F3F3F3;
   /* overflow-y: auto; */
}

.description{
    padding: 10rpx 30rpx;
    font-size:12px;
    font-family:PingFangSC-Regular;
    line-height:17px;
    color:rgba(0,0,0,0.45);
    opacity:1;
}
.content{
    background: #F3F3F3;
    padding: 0 30rpx 100rpx;
}
.company-list{
    display: flex;
    padding:24rpx 32rpx;
    background:rgba(255,255,255,1);
    box-shadow:0px 0px 6px rgba(156,156,156,0.1);
    opacity:1;
    border-radius:4px;
    margin-bottom: 20rpx;
    font-size:13px;
    font-family:PingFangSC-Regular;
    line-height:18px;
    color:rgba(30,30,30,1);
}
.company_title{
    display: -webkit-flex;
    justify-content: space-between;
    padding: 0 10rpx;
    margin-bottom: 15rpx;
    font-size:16px;
    font-family:PingFang SC;
    font-weight:bold;
    line-height:22px;
    color:rgba(30,30,30,1);
    opacity:1;
}
.company_title .grade{
    margin-top: 5rpx;
    white-space: nowrap;
    font-size:12px;
    font-family:PingFangSC-Regular;
    line-height:17px;
    color:rgba(0,0,0,0.45);
    opacity:1;
}
.company_title .grade-num{
    font-family:PingFangSC-Medium;
    line-height:17px;
    color:rgba(30,30,30,1);
}
.images1{
    width: 24rpx;
    height: 24rpx;
    margin-right: 0;
    margin-bottom: -2rpx;
    padding: 0 20rpx;
}
.list-left{
  width: 40rpx;
  margin-top: 10rpx;
}
.list-right{
  flex: 1;
} 
.list-right .main-cell{
   display: flex;
}
.icon_none{
  width: 32rpx;
  height: 32rpx;
  border: 1rpx solid #d6d6d6;
  border-radius: 50%;
}
.img_check{
  width: 34rpx;
  height: 34rpx;
}
.introduce-bd{
    display: flex;
    justify-content: space-between;
    font-size:26rpx;
    line-height:36rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
}
.bottom{
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #d6d6d6;
  background-color: #fff;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
}
.bottom .left{
  margin-left: 30rpx;
}
.bottom .right{
  margin-right: 30rpx;
}
.save-btn{
  width:160rpx;
  height:76rpx;
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  line-height:44rpx;
  color:rgba(255,255,255,1);
  background:rgba(253,125,130,1);
  border:1px solid rgba(252,123,129,1);
  opacity:1;
  border-radius:4px;
}