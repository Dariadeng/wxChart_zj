/* pages/selfBuiltRules/selfBuiltRules.wxss */
.role-page{
  width: 100%;
   height: 100%;
   background: #F3F3F3;
}
.content{
   padding: 30rpx;
}
.content-list{
    display: flex;
    padding: 28rpx 12rpx 28rpx 28rpx;
    margin-bottom: 30rpx;
    background: #fff;
    background:rgba(255,255,255,1);
    box-shadow:0px 0px 6px rgba(156,156,156,0.1);
    opacity:1;
    border-radius:4px;
}
.list-left{
  width: 80rpx;
}
.list-right{
  flex: 1;
} 
.list-right .main-cell{
   display: flex;
}
.icon_none{
  width: 32rpx;
  height: 32rpx;
  border: 1rpx solid #d6d6d6;
  border-radius: 50%;
}
.img_check{
  width: 34rpx;
  height: 34rpx;
}
.list-right-item{
  font-size: 32rpx;
  font-family:PingFang SC;
  font-weight:500;
  line-height: 44rpx;
  color:rgba(0,0,0,0.65);
  opacity:1;
}
.bottom{
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #d6d6d6;
  background-color: #fff;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
}
.save-btn{
  width:345px;
  height:76rpx;
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  line-height:44rpx;
  color:rgba(255,255,255,1);
  background:rgba(253,125,130,1);
  border:1px solid rgba(252,123,129,1);
  opacity:1;
  border-radius:4px;
}