/* pages/ companyFilter/ companyFilter.wxss */
.filter-page{
   position: relative;
}
.company-introduce{
    position: relative;
    padding: 0 24rpx;
    height: 364rpx;
    background-color: #FC7B81;
}
.group_title{
    display: flex;
    display: -webkit-flex;
    align-items: center;
    padding: 10rpx 16rpx 20rpx;
    font-size:32rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(255,255,255,1);
    line-height:44rpx;
}
.block_blue{
  width: 80rpx;
  color:#40A9FF;
  background:rgba(64,169,255,0.09);
}
.company-introduce .introduce-bd{
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size:26rpx;
    line-height:36rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
}
.introduce-loading{
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(255,255,255,.2);
    width: 100%;
    height: 100%;
}
.introduce-bd .canvas-wrap{
    width: 184rpx;
    height: 184rpx;
}
.introduce-bd .name{
  width: 178rpx;
  /* text-align: center; */
  margin-left: 36rpx;
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  color:rgba(255,255,255,1);
  opacity:0.85;
  line-height:36rpx;
}
.monitor{
  font-size:13px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(252,123,129,1);
  line-height:18px;
}
.images1{
    width: 24rpx;
    height: 24rpx;
    margin-right: 0;
    margin-bottom: -2rpx;
    padding: 0 20rpx;
}
.introduce-bd .images2{
    margin-right: 10rpx;
    width: 32rpx;
    height: 34rpx;
}
.introduce-bd .text{
  font-size:26rpx;
  font-weight:400;
  line-height:36rpx;
  color:rgba(255,255,255,1);
  font-family:PingFangSC-Regular,PingFang SC;
}
.introduce-bd .num{
  font-size:32rpx;
  font-weight:500;
  line-height:44rpx;
  font-family:PingFangSC-Medium,PingFang SC;
}
.introduce-bd .main-item{
  width: 50%;
  padding: 10rpx;
  font-family:PingFangSC-Regular;
  line-height:18px;
  color:rgba(255,255,255,1);
  opacity:0.85;
}
.main-item .text .num1{
  display: inline-block;
  color:rgba(30,30,30,1);
}
.introduce-bd .split-line{
  height: 62rpx;
}
.center-wrap{
  /* height: 254rpx; */
  display: flex;
  display: -webkit-flex;
  padding: 0 30rpx;
  background:rgba(255,255,255,1);
  border-bottom: 4rpx solid #FC7B81;
}
.title{
  display: -webkit-flex;
  justify-content: space-between;
    margin-top: 26rpx;
    margin-bottom: 10rpx;
    padding: 0 10rpx;
    font-size:32rpx;
    font-weight:500;
    color:rgba(30,30,30,1);
    line-height:44rpx;
}
.title .block-num{
    display: inline-block;
    margin-left: 20rpx;
    padding: 0 10rpx;
    background:rgba(243,243,243,1);
    border-radius:4rpx;
    font-size:26rpx;
    color:rgba(0,0,0,0.45);
    line-height:36rpx;
}
.title .grade{
    font-size:32rpx;
    color:rgba(252,123,129,1);
    line-height:44rpx;
    white-space: nowrap;
}
.center-wrap .content-mian-bd{
   margin-bottom: 0;
   margin-top: 0;
}
.company-list-wrap{
  padding: 0 30rpx 100rpx;
}
.com_lefts{
  width: 40rpx;
  margin-top: 32rpx;
}
.com_right{
  flex: 1;
}
.company-list-wrap .title{
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx;
}
.company-list-wrap .tips{
  /* padding: 14rpx 10rpx 0; */
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(0,0,0,0.45);
  line-height:34rpx;
}
.company-list-wrap .tips .total{
  color: #FC7B81;
}
.company-list-wrap .content{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
}
.title .title-img{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
}
.title .title-cell{
  text-align: right;
  color: rgba(0,0,0,.5);
}
.title-img .images1{
   width: 32rpx;
   height: 32rpx;
   margin-right: 16rpx;
}
.company-list-wrap .icon_none{
  width: 32rpx;
  height: 32rpx;
  border: 1rpx solid #d6d6d6;
  border-radius: 50%;
}
.img_check{
  width: 34rpx;
  height: 34rpx;
}
.detail-wrap{
  font-size:11px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(252,123,129,1);
  line-height:16px;
}
.img_detail{
  width: 28rpx;
  height: 28rpx;
}
.company-list-wrap .content-mian-bd{
    display: flex;   
    margin: 0;
}

.bottom{
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #d6d6d6;
  background-color: #fff;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
}
.bottom .left{
  margin-left: 30rpx;
}
.bottom .left .sure_scope{
  width:160rpx;
  height:76rpx;
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  line-height:44rpx;
  color:rgba(252,123,129,1);
  border-radius:8rpx;
  border:2rpx solid rgba(252,123,129,1);
}
.bottom .left .select_none{
  width: 28rpx;
  height: 28rpx;
  border: 1rpx solid #d6d6d6;
  border-radius: 50%;
}
.bottom .right .all{
  color: #ff830f;
  font-size: 26rpx;
}
.bottom .right .gray{
  color: #666666;
  font-size: 22rpx;
}
.bottom .right .sure{
  margin-right: 30rpx;
  width: 310rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius:8rpx;
  color: #fff;
}
