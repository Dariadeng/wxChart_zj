.sure_scope{
  width:160rpx;
  height:76rpx;
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  line-height:44rpx;
  color:rgba(255,255,255,1);
  background:rgba(253,125,130,1);
