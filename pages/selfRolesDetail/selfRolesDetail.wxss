/* pages/selfRolesDetail/selfRolesDetail.wxss */
page{ 
  height:100%;
}
.detail-page{
  width: 100%;
  height: 100%;
  background: #F3F3F3;
  /* overflow-y: auto;  */
}
.header{
  position: fixed;
  width: 100%;
  height:100rrx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 2px rgba(186,186,186,0.16);
  opacity:1;
  font-size: 24rpx;
  font-family:PingFangSC-Medium;
  line-height: 34rpx;
  color:rgba(30,30,30,1);
  z-index: 100;
}
.header-right{
  display: flex;
  align-items: center;
  padding: 26rpx 40rpx;
}
.header-content{
    display: flex;
    align-items: center;
    padding: 26rpx 40rpx;
}
.filter-box{
  position: fixed;
  top: 104rpx;
  left: 0;
  z-index: 100;
  background: #fff;
}
.mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background:rgba(30,30,30,1);
  opacity:0.5;
}
.picker{
    padding: 26rpx;
    background-color: #FFFFFF;
    display: flex;
    align-items: center;
}
.picker-item{
  width: 100rpx;
  height: 48rpx;
  background:rgba(255,255,255,1);
  border: 2rpx solid rgba(235,235,235,1);
  opacity:1;
  border-radius: 6rpx;
}
.arrow{
    margin-right: 15rpx;
    position:relative;
    width: 0;
    height: 0;
    border-width: 8rpx 12rpx 0;
    border-style: solid;
    border-color:  #D8D8D8 transparent transparent ;
}

.slider-box{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 40rpx 0;
  border-top: 2rpx solid rgba(243,243,243,1);
}
.range-text{
  width: 100%;
  margin-left: 100rpx;
  font-size: 28rpx;
  font-family:PingFangSC-Regular;
  line-height: 36rpx;
  color:rgba(30,30,30,1);
}
.range-slider-block {
  border-radius: 50%;
  width: 100%;
  height: 100%;
  background-color: white;
  box-shadow: 0px 0px 10rpx #888;
}
.range-btn{
  width: 100%;
  margin-top: 20rpx;
  margin-right: 100rpx;
}
.range-value{
  width: 640rpx;
  font-size: 24rpx;
  font-family:PingFangSC-Medium;
  line-height: 34rpx;
  color:rgba(30,30,30,.5);
}
.filter-extend{
  width: 100%;
  background-color: #fff;
  border-bottom: 4rpx solid #F3F3F3;
}
.filter-extend .list-item{
  font-size: 28rpx;
  font-family:PingFangSC-Regular;
  line-height: 40rpx;
  color:rgba(30,30,30,1);
  opacity:1;
}
.filter-extend .list-item .item{
  /* padding: 20rpx 40rpx; */
  border-top:1px solid rgba(243,243,243,1);
}
.filter-extend .list-item .selectName{
   color: #FD7D82;
}


.content1{
    background: #F3F3F3;
    padding: 106rpx 30rpx;
}
.content2{
    background: #F3F3F3;
    padding:0 30rpx  106rpx;
}
.total{
    padding: 12rpx 22rpx;
    font-size: 24rpx;
    font-family:PingFangSC-Regular;
    line-height: 34rpx;
    color:rgba(0,0,0,0.45);
    opacity:1;
}
.company-list{
    position: relative;
    display: flex;
    padding:24rpx 32rpx;
    background:rgba(255,255,255,1);
    box-shadow:0px 0px 12rpx rgba(156,156,156,0.1);
    opacity:1;
    border-radius: 8rpx;
    margin-bottom: 20rpx;
    font-size: 26rpx;
    font-family:PingFangSC-Regular;
    line-height: 36rpx;
    color:rgba(30,30,30,1);
}
.company_title{
    display: -webkit-flex;
    justify-content: space-between;
    padding: 0 10rpx;
    margin-bottom: 15rpx;
    font-size: 32rpx;
    font-family:PingFang SC;
    font-weight:bold;
    line-height: 44rpx;
    color:rgba(30,30,30,1);
    opacity:1;
}
.company_title .grade{
    white-space: nowrap;
    font-size: 24rpx;
    font-family:PingFangSC-Regular;
    line-height: 34rpx;
    color:rgba(0,0,0,0.45);
    opacity:1;
}
.company_title .grade-num{
    font-size: 32rpx;
    color:rgba(252,123,129,1);
    line-height: 44rpx;
}
.images1{
    width: 24rpx;
    height: 24rpx;
    margin-right: 0;
    padding: 0 20rpx;
}
.path_img{
    width: 32rpx;
    height: 32rpx;
    margin-right: 0;
    padding: 0 20rpx;
}
.images2{
    width: 48rpx;
    height: 48rpx;
    margin: 0 20rpx;
}
.list-left{
  width: 40rpx;
  margin-top: 10rpx;
}
.list-right{
  flex: 1;
} 
.list-right .main-cell{
    display: flex;
    align-items: center;
}
.icon_none{
  width: 32rpx;
  height: 32rpx;
  border: 1rpx solid #d6d6d6;
  border-radius: 50%;
}
.img_check{
  width: 34rpx;
  height: 34rpx;
}
.detailBtn{
  position: absolute;
  right: 12rpx;
  bottom: 24rpx;

}
.bottom{
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #d6d6d6;
  background-color: #fff;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
}
.bottom .left{
  font-size: 32rpx;
