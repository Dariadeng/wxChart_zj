/* pages/controlledPath/controlledPath.wxss */
page{ 
  height:100%;
}
.controll-page{
   width: 100%;
   height: 100%;
   background: #F3F3F3;
}
.header{
  padding: 28rpx 36rpx;
  font-size:16px;
  font-family:PingFang SC;
  /* font-weight:bold; */
  line-height:22px;
  color:rgba(30,30,30,1);
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 2px rgba(186,186,186,0.16);
  opacity:1;
}
.content{
    background: #F3F3F3;
    padding: 36rpx 30rpx;
}
.path-list{
    padding:24rpx 32rpx;
    background:rgba(255,255,255,1);
    box-shadow:0px 0px 6px rgba(156,156,156,0.1);
    opacity:1;
    border-radius:4px;
    margin-bottom: 20rpx;
    font-size:13px;
    font-family:PingFangSC-Regular;
    line-height:18px;
    color:rgba(30,30,30,1);
} 
.title{
  margin-bottom: 26rpx;
  font-size:13px;
  font-family:PingFangSC-Regular;
  line-height:18px;
  color:rgba(30,30,30,1);
  opacity:1;
}
.way{
  padding-right: 20rpx;
  font-size:16px;
  font-family:PingFang SC;
  font-weight:bold;
  line-height:22px;
}
.path-container{
  font-size:13px;
  font-family:PingFangSC-Regular;
  line-height:18px;
  color:rgba(30,30,30,1);
  opacity:1;
}
.path{
  font-size:13px;
  font-family:PingFangSC-Regular;
  line-height:18px;
  color:rgba(30,30,30,1);
  opacity:1;
}
.arrow-wrap{
   position: relative;
   display: inline-block;
   margin: 14rpx 0;
}
.arrow-wrap .img{
   width: 128rpx;
   height: 18rpx;
   padding: 0 12rpx;
}
.arrow-wrap .ratio{
    position: absolute;
    top: -10px;
    left: 16px;
    font-size:12px;
    font-family:PingFangSC-Regular;
    line-height:17px;
    color:rgba(252,123,129,1);
    opacity:1;
}
