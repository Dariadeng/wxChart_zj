/* pages/characterGroupSetting/characterGroupSetting.wxss */
page{ 
  height:100%;
  position: relative;
}
.edit-tips{
  position: absolute;
  top: 200rpx;
  left: 30%;
  padding: 20rpx;
  background:rgba(0,0,0,0.5);
  border-radius: 4rpx;
  font-size: 28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height: 34rpx;
}
.setting-page{
   width: 100%;
   height: 100%;
   background: #F3F3F3;
   /* overflow-y: auto; */
}
.header{
  padding: 20rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 2px rgba(186,186,186,0.16);
  opacity:1;
}
.header .header-btn{
  width: 50%;
  padding: 10rpx;
  font-size: 32rpx;
  font-family:PingFangSC-Medium;
  line-height: 44rpx;
  color:rgba(253,125,130,1);
  opacity:1;
}
.total{
    padding: 12rpx 22rpx;
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    line-height:34rpx;
    color:rgba(0,0,0,0.45);
    opacity:1;
}
.content{
    background: #F3F3F3;
    padding: 0 30rpx 100rpx;
}
.company-list{
    display: flex;
    padding:24rpx 32rpx;
    background:rgba(255,255,255,1);
    box-shadow:0px 0px 6px rgba(156,156,156,0.1);
    opacity:1;
    border-radius: 4rpx;
    margin-bottom: 20rpx;
    font-size: 26rpx;
    font-family:PingFangSC-Regular;
    line-height: 36rpx;
    color:rgba(30,30,30,1);
} 
.company_title{
    display: -webkit-flex;
    justify-content: space-between;
    padding: 0 10rpx;
    margin-bottom: 15rpx;
    font-size: 32rpx;
    font-family:PingFang SC;
    font-weight:bold;
    line-height: 44rpx;
    color:rgba(30,30,30,1);
    opacity:1;
}
.company_title .grade{
    white-space: nowrap;
    font-size: 24rpx;
    font-family:PingFangSC-Regular;
    line-height:34rpx;
    color:rgba(0,0,0,0.45);
    opacity:1;
}
.company_title .grade-num{
    font-size:32rpx;
    color:rgba(252,123,129,1);
    line-height:44rpx;
}
.images1{
    width: 24rpx;
    height: 24rpx;
    margin-right: 0;
    /* margin-bottom: -2rpx; */
    padding: 0 20rpx;
}
.path_img{
    width: 32rpx;
    height: 32rpx;
    margin-right: 0;
    padding: 0 10rpx;
}
.list-left{
  width: 40rpx;
  margin-top: 10rpx;
}
.list-right{
  flex: 1;
} 
.list-right .main-cell{
   display: flex;
   /* align-items: center; */
}
.icon_none{
  width: 32rpx;
  height: 32rpx;
  border: 1rpx solid #d6d6d6;
  border-radius: 50%;
}
.img_check{
  width: 34rpx;
  height: 34rpx;
}
.bottom{
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #d6d6d6;
  background-color: #fff;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
}
.bottom .left{
  margin-left: 30rpx;
  font-size: 32rpx;
  font-family:PingFangSC-Regular;
  line-height: 44px;
  color:rgba(0,0,0,0.65);
  opacity:1;
}
.bottom .right{
  margin-right: 30rpx;
}
.bottom .sure_scope{
  width:160rpx;
  height:76rpx;
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  line-height:44rpx;
  color:rgba(255,255,255,1);
  background:rgba(253,125,130,1);
  border:1px solid rgba(252,123,129,1);
  opacity:1;
  border-radius:4px;
}
.bottom .select_none{
  width: 28rpx;
  height: 28rpx;
  border: 1rpx solid #d6d6d6;
  border-radius: 50%;
}
.company-loading{
    width: 100%;
    min-height:100rpx;
}
.align_center{
   display: flex;
   align-items: center;
   width: 40%;
   z-index: 100;
}
.controller-cell{
    padding-right: 50rpx;
  position: relative;
}
.controller-cell_in::after{
  content: " ";
  display: inline-block;
  height: 16rpx;
  width: 16rpx;
  border-width: 4rpx 4rpx 0  0;
  border-color: #ccc;
  border-style: solid;
  -webkit-transform: matrix(.71,.71,-.71,.71,0,0);
  transform: matrix(.71,.71,-.71,.71,0,0);
  /* position: relative; */
  position: absolute;
  top: 50%;
  margin-top: -12rpx;
  right: 20rpx;
}
.controller-cell_shrink::after{
  border-width: 4rpx 4rpx 0  0;
}
.controller-cell_expand::after{
  border-width: 0 4rpx 4rpx 0;
}