/* pages/vipDescription/vipDescription.wxss */
.header{
  display: flex;
  align-items: center;
  height: 80rpx;
  padding-left:66rpx;
  background:rgba(245,247,250,1);
  border-radius:1px;
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(30,30,30,.5);
  line-height:22px;
}
.header .img_head{
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
}
.content_container{
  margin: 32rpx;
}
.content_top{
    position: relative;
    height: 128rpx;
    margin-bottom: 32rpx;
}
.top_left{
  margin-left: 64rpx;
}
.top_left .title1{
  font-size:40rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(246,199,145,1);
  line-height:28px;
  text-shadow:0px 2px 4px rgba(0,0,0,0.3);
}
.top_left .title2{
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(246,199,145,1);
  line-height:17px;
  text-shadow:0px 2px 4px rgba(0,0,0,0.3);
}

.top_right{
    margin-right: 76rpx;
    font-size:28rpx;
    font-family:PingFangSC-Semibold,PingFang SC;
    font-weight:600;
    color:rgba(241,210,152,1);
    line-height:20px;
    text-shadow:0px 2px 4px rgba(0,0,0,0.5);
}
.num_credit{
    font-family:PingFangSC-Semibold,PingFang SC;
    font-weight:600;
    font-size:68rpx;
}
.vip_bg{
   position: absolute;
   top:0;
   left:0;
   width:100%;
   height:100%;
   z-index:-1;
}
.content_table{
  background:rgba(245,242,240,1);
  border-radius:12px;
}
.content_table .tr{
  width: 100%;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #EED5B9;
}
.tr_title{
  display: flex;
  align-items: center;
  height:80rpx;
  font-size:14px;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
   background:linear-gradient(180deg,rgba(237,220,187,1) 0%,rgba(228,207,172,1) 100%);
}
.th,.td {
   width: 100%;
   padding: 20rpx 28rpx;
   border-right: 1px solid #EED5B9;
   text-align: center;
   font-size:12px;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(30,30,30,1);
    line-height:17px;
}
.tr:last-child{
    border-bottom: 0;
}
.th:last-child,.td:last-child{
    border-right: 0;
}
.th{
  background:rgba(245,242,240,1);
}
.bold_tip{
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
}
.bottom{
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #d6d6d6;
  background-color: #fff;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
}
.bottom .left{
  margin-left: 30rpx;
  color:#FD7D82;
  font-size:14px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  line-height:20px;
}
.bottom .right .sure{
  margin-right: 30rpx;
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius:8rpx;
  color: #fff;
}