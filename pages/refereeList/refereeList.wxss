/* pages/refereeList/refereeList.wxss */
.referee-page{
  width: 100%;
  height: 100%;
  position: relative;
  font-family:PingFangSC-Medium,PingFang SC;
}
.flex_between{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
}
.header{
    padding:16rpx 40rpx;
    border-bottom: 4rpx solid #F3F3F3;
}
.header .title{
    font-size:36rpx;
    font-weight:500;
    color:rgba(30,30,30,1);
    line-height:50rpx;
}
.sort-wrap .sort{
  font-size:26rpx;
  font-weight:400;
  color:rgba(0,0,0,0.65);
  line-height:36rpx;
  position: relative;
}
.sort-wrap .sort+.sort{
  padding-left: 40rpx;
}
.arrow{
    position:relative;
    width: 0;
    height: 0;
    border-width: 8rpx 12rpx 0;
    border-style: solid;
    border-color:  #D8D8D8 transparent transparent ;
}
.law-content-wrap{
  margin-top: 20rpx;
}
.law-content-wrap .content-main{
    display: flex;
    /* justify-content: space-between; */
    margin-bottom: 16rpx;
    font-size:28rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(30,30,30,1);
    line-height:40rpx;
}
.law-content-wrap .content-main .text{
   width: 200rpx;
   color: rgba(0,0,0,.5);
}
.law-content-wrap .law-content{
  margin-bottom: 36rpx;
}
.law-content-wrap .content-title{
    margin-bottom: 16rpx;
    font-size:30rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(30,30,30,1);
}

.referee-page .content{
    padding:16rpx 40rpx;
}
.referee-page .content-item{
   padding: 10rpx;
}
.referee-page .content-item .name{
    padding: 10rpx 0;
    font-size:30rpx;
    font-weight:400;
    color:#1E1E1E;
    line-height:42rpx;
}
.content-item .top{
  display: flex;
  justify-content: space-between;
}
.content-item .bottom{
  display: flex;
}
.content-item .bottom .bottom-cell{
  background:rgba(243,243,243,1);
  border-radius:4rpx;
  font-size:24rpx;
  font-weight:500;
  color:rgba(0,0,0,0.45);
  line-height:34rpx;
  padding: 4rpx 8rpx;
}
.bottom-cell+.bottom-cell{
   margin-left: 10rpx;
}