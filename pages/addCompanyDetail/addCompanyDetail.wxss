/* pages/addCompanyByCompany/addCompanyByCompany.wxss */
.detail-page{
  width: 100%;
  height: 100%;
  position: relative;
  background:#F3F3F3;
  overflow-y: auto;
}
.detail-loading,
.detail-noData{
  width: calc(100% - 60rpx);
  position: absolute;
  margin-top: 40%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 40rpx;
  background: #fff;
}
.search-wrap{
  position: relative;
  display: flex;
  align-items: center;
  z-index: 200;
}
.search-wrap .textinput{
  display: inline-block;
  width: 460rpx;
  padding: 10rpx 60rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular,PingFang SC;
  color: rgba(30,30,30,0.5);
  background:#F3F3F3;
  border-radius:10rpx;
}
.search-wrap .search_input1{
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  left: 10rpx;
  z-index: 100;
}
.search-wrap .search_input2{
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  right: 10rpx;
  z-index: 100;
}
.cancle-btn{
    font-size:32rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:#FD7D83;
}
.content{
  position: relative;
  height: calc(100% - 250rpx);
  padding: 30rpx;
  font-size: 28rpx;
  font-family:PingFang SC;
  font-weight:500;
  line-height:20px;
  color:rgba(0,0,0,0.65);
  opacity:1;
}
.total{
  margin-bottom: 12rpx;
  font-size: 24rpx;
  font-family:PingFangSC-Regular;
  line-height:17px;
  color:rgba(165,165,165,1);
  opacity:1;
}
.person-list{
   display: flex;
   background: #fff;
   margin-bottom: 20rpx;
   padding: 20rpx;
   font-size: 24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height: 36rpx;
  color:rgba(89,89,89,1);
  opacity:1;
}
.content-list{
    padding: 28rpx 40rpx;
    margin-bottom: 20rpx;
    font-size: 28rpx;
    font-family:PingFang SC;
    font-weight:400;
    line-height: 40rpx;
    color:rgba(30,30,30,0.50);
    background:rgba(255,255,255,1);
    box-shadow:0px 0px 12rpx rgba(156,156,156,0.1);
    opacity:1;
    border-radius: 8rpx
}
.item_flex{
  display: flex
}
.content-list .item-title{
  padding-bottom: 20rpx; 
  font-size: 30rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height: 42rpx;
  color:rgba(30,30,30,1);
  opacity:1; 
}
.content-list .item{
  display: flex;
  width: 50%;
}
.radio{
  width: 50%;
}
radio .wx-radio-input {
  height: 30rpx;
  width: 30rpx;
  border-radius: 8rpx;
  border: 2rpx solid #999;
  background: transparent;
}
radio .wx-radio-input.wx-radio-input-checked {
  border-color: #FC7B81;
  background: #FC7B81;
}
.person-list .title{
  padding-bottom: 10rpx;
}
.person-list .person-name{
  font-size: 30rpx;
  font-family:PingFang SC;
  font-weight:bold;
  line-height: 42rpx;
  color:rgba(0,0,0,0.65);
  opacity:1;
}
.recent{
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  height: 80rpx;
  background:rgba(255,255,255,1);
  opacity:1;
  border-radius: 8rpx;
}
.list-left{
  width: 40rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
}
.list-right{
  flex: 1;
} 
.list-right .main-cell{
   display: flex;
}
.icon_none{
  width: 32rpx;
  height: 32rpx;
  border: 1rpx solid #d6d6d6;
  border-radius: 50%;
}
.img_check{
  width: 34rpx;
  height: 34rpx;
}
.bottom{
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #d6d6d6;
  background-color: #fff;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
}
.bottom .left{
  margin-left: 30rpx;
}
.bottom .right{
  margin-right: 30rpx;
}
.bottom .back-btn{
  width:300rpx;
  height:76rpx;
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  line-height: 44rpx;
  color:rgba(0,0,0,0.65);
  opacity:1;
  border-radius:8rpx;
  /* border:2rpx solid rgba(252,123,129,1); */
}
.bottom .sure_scope{
  width:160rpx;
  height:76rpx;
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  line-height:44rpx;
  color:rgba(255,255,255,1);
  background:rgba(253,125,130,1);
  border-radius:8rpx;
  border:2rpx solid rgba(252,123,129,1);
}