/* component/dialogBox/dialogBox.wxss */
.flex_center{
    display: flex;
    display: -webkit-flex;
    justify-content: center;
    align-items: center;
}
.dialog-page{
  position: fixed;
  top: 0;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.5);
  z-index: 99;
}
.main-content{
   width: 400rpx;
   padding: 34rpx 60rpx;
   background:rgba(255,255,255,1);
   border-radius:20rpx;
}
.main-content .title{
  margin-bottom: 40rpx;
  font-size:28rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
  line-height:40rpx;
}
.content,
.way{
  margin-bottom: 40rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:34rpx;
}
.img_cancel{
   margin-top: 150rpx;
   width: 72rpx;
   height: 72rpx;
}