/* component/messageBox/messageBox.wxss */
.flex_center{
    display: flex;
    display: -webkit-flex;
    justify-content: center;
    align-items: center;
}
.dialog-page{
  position: fixed;
  top: 0;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.5);
  z-index: 99;
}
.main-content{
   width: 560rpx;
   background:rgba(255,255,255,1);
   border-radius:8rpx;
}
.content{
  font-size:32rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:44rpx;
}
.close-wrap{
  height: 30px; 
  width: 100%; 
  position: relative;
}
.close {
    color: #979797;
    text-align: center;
    height: 20px;
    width: 20px;
    font-size: 20px;
    padding: 1px;
    top: 0;
    right: 5px;
    position: absolute;
}
.close::before {
    content: "\00D7";
}